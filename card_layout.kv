#: import card_layout card_layout

<CardLayout>:
    card_image: card_image
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)

        BoxLayout:
            size_hint: 1, 0.05

            Button:
                text: 'Turn'
                on_press: root.turn()
            Button:
                text: 'Del'
                on_press: root.delete_card()
            Button:
                text:  '-45°'
                on_press: root.rotate_left()
            Button:
                text: '+45°'
                on_press: root.rotate_right()
            Label:
                text: 'move'

        ScatterLayout:

            size_hint : 0.8, 0.8
            pos_hint: {'center_x':0.5, 'center_y': 0.5}
            id: card_image
            do_translation: False
            do_scale: False
            CardImage:
                source: root.current_face



